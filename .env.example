# CHOCKY'S Glamour - Environment Variables Example
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# MySQL connection string
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE?ssl-mode=REQUIRED
DATABASE_URL="mysql://username:password@hostname:port/database_name?ssl-mode=REQUIRED"

# ===========================================
# NEXTAUTH CONFIGURATION (Required)
# ===========================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here"

# Your deployment URL (use http://localhost:3000 for local development)
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# OPTIONAL: PAYMENT PROVIDERS
# ===========================================
# MTN Mobile Money API
MTN_MOMO_API_KEY=""
MTN_MOMO_API_SECRET=""

# Airtel Money API
AIRTEL_MONEY_API_KEY=""
AIRTEL_MONEY_API_SECRET=""

# PayPal
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""

# ===========================================
# OPTIONAL: EMAIL (SMTP)
# ===========================================
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@chockys.com"

# ===========================================
# OPTIONAL: ANALYTICS
# ===========================================
GOOGLE_ANALYTICS_ID=""
